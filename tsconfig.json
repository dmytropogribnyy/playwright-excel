{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["jest", "node", "@playwright/test"]
  },
  "include": ["tests/**/*.ts", "utils/**/*.ts", "pages/**/*.ts"],
  "exclude": ["node_modules"]
}

